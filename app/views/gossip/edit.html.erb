<%if @gossip_update.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    	<p><strong>Hola muchachos !</strong>  Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
    	<% @gossip_update.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>

    	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
    		<span aria-hidden="true">&times;</span>
    	</button>
    </div>
    
    <%end%>

  <body>
    <center>
    <h3>Modifiez votre potin ici :</h3>
    <br>
    <div class="container">

      <%=form_tag url_for(action: 'update'), method: "put" do %>

      <div class="form-group">
       <%= label_tag 'Title' %>
        <br>
        <%= text_field_tag 'title', @gossip_update.title %>
        <br /> <br />
      </div>
      <div class="form-group">

        <%= label_tag 'Content' %>
        <br>
        <%= text_area_tag 'content', @gossip_update.content %>
        <br /> <br />
      </div>
      <div class="form-group">

      <%= submit_tag "Edit Gossip", class: "btn btn-primary btn-sm"%>
      </div>
      <% end %>
    </div>
    </center>