<br>

<div class="conv">
  <div class="inbox" >
    <h2>Inbox</h2>

    <ul>
      <%@conversations.each do |conversation|%>
      <li style="border: 1px solid gray;">
        <%=link_to conversation.receiver(current_user).first_name, conversation_messages_path(conversation), style:"margin-left: 10px;"%>
        <%if !conversation.unread_message_count(current_user).zero?%>
        <span class="badge badge-primary" style="margin-left: 5px;"><%= conversation.unread_message_count(current_user)%></span>
        
      </li>
      <%end%>
      <%end%>
    </ul>
      
  </div>

      <div class="user">

      <h2>Users</h2>
      <ul>
        <% @users.each do |user| %>
        <li style="border: 1px solid gray;"><%= link_to user.first_name, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post , style: "margin-left: 10px;"%></li>
        <% end %>
      </ul>
    </div>
</div>