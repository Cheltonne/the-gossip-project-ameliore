
<% @comments.each do |comment| %>
<center>
<div class="card" style="width: 18rem;">
  <ul class="list-group list-group-flush">
        <div class="card-header">
    COMMENTAIRE
  </div>
    <li class="list-group-item"><%=comment.user.first_name%></li>
    <li class="list-group-item"><%=comment.content%></li>
    <%if current_user != comment.user%>
    <%nil%>
    <%else%>
    <li class="list-group-item"><%= link_to "Edit", edit_gossip_comment_path(comment.gossip, comment)%>  / <%= link_to "Delete", [comment.gossip, comment], method: :delete %></li>
    <%end%>
  </ul>
</div>
<% end %>
<center>
<br><br>

<%= render 'comments/form'%>