<%= form_tag url_for(action: 'create'), method: "post" do %>
<br>
<center>
<%=image_tag("anonymous.png", size:"72x72")%>
<br>
<legend>Inscris-toi</legend>
<div class="form-group form-row" style="width: 50%;" >
  <div class="col" placeholder="First name">
    <br>
    <%= text_field_tag 'first_name', @user.first_name, class: "form-control", placeholder: 'First name' %>
  </div>
  <br>
  <div class="col">
    <br>
    <%= text_field_tag 'last_name', @user.last_name, class: "form-control", placeholder: 'Last name'%>
  </div>
  <div class="col">
    <br>
    <%= number_field_tag 'age', @user.age, class: "form-control", placeholder: 'Age' %>
  </div>
</div>
<div class="form-group form-row" style="width: 50%;" >
  <div class="col">
    <br>
    <%= email_field_tag 'email', @user.email, class: "form-control", placeholder: 'Email@example.com' %>
  </div> 
  <div class="col">
    <br>
    <%= text_field_tag 'city', @user.city, class: "form-control", placeholder: 'City' %>
  </div>
</div>
<div class="form-group" style="width: 20%;">
  <br>
  <%= text_field_tag 'description', @user.description, class: "form-control", placeholder: 'Description' %>
</div>
<div class="form-group" style="width: 20%;">
  <br>
  <%= password_field_tag 'password', @user.password, class: "form-control", placeholder: 'Password' %>
  <br>
</div>
<%= submit_tag  "Sign in", class: "btn btn-primary btn-sm"%>
<% end %>
</center>